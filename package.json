{
  "name": "file-ai",
  "version": "1.0.4",
  "type": "module",
  "main": "./dist/main/index.js",
  "scripts": {
    "build": "electron-vite build",
    "dev": "electron-vite dev",
    "preview": "electron-vite preview",
    "package:win": "npm run build && electron-builder --win",
    "package:mac_app": "npm run build && electron-builder --mac",
    "package:mac_dist": "electron-builder --mac",
    "package:linux": "npm run build && electron-builder --linux",
    "package": "npm run build && electron-builder"
  },
  "devDependencies": {
    "@types/electron-store": "^3.2.2",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitejs/plugin-react": "^5.1.2",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^40.1.0",
    "electron-builder": "^26.7.0",
    "electron-vite": "^5.0.0",
    "fs-extra": "^11.1.0",
    "typescript": "^5.0.0",
    "vite": "^7.3.1",
    "wait-on": "^7.0.1"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "redactum": "^1.1.0"
  },
  "build": {
    "appId": "app.files-ai",
    "productName": "files-ai",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "!dist/**/*.map"
    ],
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.utilities",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "icon": "assets/files-ai.icns",
      "identity": null,
      "type": "distribution"
    },
    "dmg": {
      "title": "${name} ${version}",
      "icon": "assets/files-ai.icns",
      "contents": [
        {
          "x": 120,
          "y": 200,
          "type": "file",
          "path": "release/mac-arm64/files-ai.app"
        },
        {
          "x": 400,
          "y": 200,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "format": "UDZO"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/files-ai.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/files-ai.png"
    }
  }
}
